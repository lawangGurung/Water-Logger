@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Drinking Logs</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-page="Create"><i class="bi bi-pencil-square"></i>&nbsp; Create Log</a>
        </div>
    </div>

    <br /><br />

    @* table for logs *@

    <table class="table table-hover table-bordered table-striped" style="width:100%;">
        <thead>
            <tr>
                <th>Date (dd-mm-yyyy)</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model.DrinkWaterLogs)
            {
                <tr>
                    <td style="width:50%">@log.Date.ToString("dd-MM-yyyy")</td>
                    <td style="width:30%">@log.Quantity</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a href="" class="btn btn-success mx-3">
                                <i class="bi bi-pencil-fill"></i>
                            </a>

                            <a href="" class="btn btn-danger mx-3">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>